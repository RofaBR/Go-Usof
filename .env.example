# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Go-Usof Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Server
PORT=8080
GIN_MODE=debug
BASE_URL=http://localhost:8080
LOG_LEVEL=info
VERSION=dev

# Database (PostgreSQL)
DB_USER=usof_user
DB_PASSWORD=usof_password
DB_NAME=usof_db
DATABASE_URL=postgres://usof_user:usof_password@localhost:5432/usof_db?sslmode=disable

# Cache (Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Authentication (JWT)
# Generate strong secrets: openssl rand -base64 32
JWT_ACCESS_SECRET=your-super-secret-access-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_ACCESS_TTL=15
JWT_REFRESH_TTL=7

# Email (SMTP)
# Gmail: Use App Password from https://myaccount.google.com/apppasswords
SENDER_EMAIL=noreply@example.com
SENDER_PASSWORD=your-smtp-app-password

# Image Storage (Cloudinary)
# Get credentials from https://cloudinary.com
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
